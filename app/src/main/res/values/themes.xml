<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WatchWhat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffCA52F2</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.WatchWhat.light" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffCA52F2</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:action" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="actionBarTheme">@style/MyActionBarTheme</item>
<!--        <item name="buttonStyle">@style/MyButtonStyle</item>-->
    </style>

    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#ffffffff</item>
        <item name="android:textColorPrimary">#ff333333</item>
    </style>

    <style name="MyButtonStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#ffffffff</item>
        <item name="android:textColorPrimary">#ff333333</item>
        <item name="background">@drawable/shape_button</item>
    </style>

    <style name="Button.Black" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorButtonNormal">@color/black</item>
    </style>

</resources>